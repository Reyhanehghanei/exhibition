                                        a(href="#" title="شبکه اجتماعی واتساپ")
                                            i.social-media__icon.whatsapp.icon-whatsapp

                                    li.social-media__item
                                        a(href="#" title="شبکه اجتماعی واتساپ")
                                            i.social-media__icon.whatsapp.icon-whatsapp-outline

                                    li.social-media__item
                                        a(href="#" title="شبکه اجتماعی یوتیوب")
                                            i.social-media__icon.youtube.icon-youtube

                                    li.social-media__item
