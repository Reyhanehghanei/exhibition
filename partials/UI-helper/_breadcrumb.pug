mixin breadCrumb(links)
	-
		var linkLength = links.length - 1
		var counter = 0
	section.inner-banner
		.container
			.row
				.col-12.breadcrumb-flex
					nav(aria-label='breadcrumb')
						ol.breadcrumb
							li.breadcrumb__item
								a.breadcrumb__link(href='index.html')
									span.breadcrumb__icon.icon-home
									| خانه
							each item in links
								if ( counter < linkLength )
									li.breadcrumb__item
										a.breadcrumb__link(href=item.href)= item.text
								else
									li.breadcrumb__item.active= item.text
								- counter += 1