.modal.fade.bd-example-modal.search-focus#search-modal(tabindex='-1', role='dialog', aria-hidden='true')
    .modal-dialog.modal-dialog-centered
        .modal-content
            button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') ×
            .modal-body.search-center
                form.search-form
                    input.search-index.search-input(type='search', placeholder='دنبال چه اخباری می گردی ...')
                    button.search-button(type='submit')
                        span.icon-search