extends partials/_layout

block style
    <!-- contact us styles. -->
    link(rel="stylesheet" href="assets/styles/pages.css?v=" + new Date().getTime() )
    //link(rel="stylesheet" href="assets/styles/pages.min.css?v=" + new Date().getTime() )

block header
    include partials/header/_header

block content
    - let info = breadCrumbInfo.contactUs
    include partials/UI-helper/_breadcrumb
    +breadCrumb(info)
    section.contact-us.page
        .container
            h1.titles= info[0].text
            .page-item
                .row

                    .col-12.col-lg-6
                        h2.contact-us__sub-title فرم تماس
                        form#contactUsForm.validate-form.form-card
                            .form-card__field
                                label(for="name").form-card__label نام
                                input(type="text" name="name" placeholder='نام و نام خانوادگی خود را وارد نمایید' required )#name.form-card__input
                            .form-card__field
                                label(for="email").form-card__label ایمیل
                                input(type="email" name="email" placeholder='ایمیل خود را وارد کنید'  )#email.form-card__input
                            .form-card__field.mySelectOption
                            .form-group.select-option
                                label.form-card__label  موضوع
                                .custom-select
                                    select
                                        option(value="0") انتخاب موضوع ...
                                        option(value="1" disabled="disabled") 1
                                        option(value="2") 2
                                        option(value="3") 3

                            .form-card__field
                                label(for="code").form-card__label کد امنیتی
                                input(type="text" name="captcha" placeholder='کد امنیتی' required)#code.form-card__input
                                .captcha
                                    a.captcha__link(href='#')
                                        span.icon-reload
                                    img.captcha__img(title='Captcha', src='assets/images/content/captcha.png', alt='کد امنیتی')
                            .form-card__field
                                label(for="textt").form-card__label.form-card__label-textarae متن نقد و بررسی شما
                                textarea( name="messageBox" rows="4" placeholder='متن نقد و بررسی شما' required)#textt.form-card__input
                            .form-card__button
                                button.main-btn.main-btn-primary(type="submit")
                                    span.main-btn__text ارسال پیام
                    .col-12.col-lg-6.contact-info
                        h2.contact-info__title راه های ارتباطی
                        ul.contact-info__list
                            li.contact-info__list-item
                                span.contact-info__list-icon.icon-map
                                p.contact-info__list-text= siteInfo.contact.address
                            li.contact-info__list-item
                                span.contact-info__list-icon.icon-phone
                                a.contact-info__list-text(href=`tel:${siteInfo.contact.phone.replaceAll(" ", "").replaceAll("-", "")}`)
                                    bdi= siteInfo.contact.phone
                            li.contact-info__list-item
                                span.contact-info__list-icon.icon-mobile
                                a.contact-info__list-text(href=`tel:${siteInfo.contact.mobile.replaceAll(" ", "").replaceAll("-", "")}`)
                                    bdi= siteInfo.contact.mobile
                            li.contact-info__list-item
                                span.contact-info__list-icon.icon-email
                                a.contact-info__list-text(href=`mailto:${siteInfo.contact.email}`)= siteInfo.contact.email
                            li.contact-social
                                span.contact-social__text شبکه های اجتماعی:
                                ul.social-media
                                    li.social-media__item
                                        a(href="#" title="شبکه اجتماعی اینستاگرام")
                                            i.social-media__icon.instagram.icon-instagram

                                    li.social-media__item
                                        a(href="#" title="شبکه اجتماعی اینستاگرام")
                                            i.social-media__icon.instagram.icon-instagram-outline

                                    li.social-media__item
                                        a(href="#" title="شبکه اجتماعی تلگرام")
                                            i.social-media__icon.telegram.icon-telegram

                                    li.social-media__item
                                        a(href="#" title="شبکه اجتماعی تلگرام")
                                            i.social-media__icon.telegram-out.icon-telegram-outline

                                    li.social-media__item
                                        a(href="#" title="شبکه اجتماعی تلگرام")
                                            i.social-media__icon.telegram-out.icon-telegram-circle

                                    li.social-media__item
                                        a(href="#" title="شبکه اجتماعی تلگرام")
                                            i.social-media__icon.telegram-out.icon-telegram-original

                                    li.social-media__item
                                        a(href="#" title="شبکه اجتماعی تلگرام")
                                            i.social-media__icon.telegram-out.icon-telegram-original-outline

                                    li.social-media__item
                                        a(href="#" title="شبکه اجتماعی توییتر")
                                            i.social-media__icon.twitter.icon-twitter

                                    li.social-media__item
                                        a(href="#" title="شبکه اجتماعی توییتر")
                                            i.social-media__icon.twitter.icon-twitter-outline

